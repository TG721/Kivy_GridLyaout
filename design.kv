<MyLayout>
    label_var : label #we will use label_var naming to access label with id 'label'
    button_1_var: btn1
    button_2_var: btn2
    button_3_var: btn3
    button_4_var: btn4
    button_5_var: btn5

    GridLayout:
        id: outer_grid_layout
        size: root.width, root.height
        cols: 1
        spacing: 5

        TextInput:
            id: text_input
            bar_color: (0,1,0,1)
            background_color: (1,1,1,1)
            foreground_color: (0,1,0,1) #typed text color
        GridLayout:
            id: inner_grid_layout
            cols: 2
            spacing: 2.5
            Button:
                id: btn1
                text: "Button 1"
                on_press: root.pressed_button_1()
            Button:
                id: btn2
                text: "Button 2"
                on_press: root.pressed_button_2()
        Button:
            background_color: (1,0,1,1)
            id: btn3
            text: "Button 3"
            on_press: root.pressed_button_3()
        Button:
            background_color: (1,0.7,0,1)
            id: btn4
            text: "Button 4"
            size_hint_y: None
            height: 50
            on_press: root.pressed_button_4()
        Button:
            background_color: (1,0.7,0,1)
            id: btn5
            text: "Button 5"
            size_hint_y: 0.8
            on_press: root.pressed_button_5()
        Label:
            id: label
            text: "This is a label"
            #background_color: (0,0,1,1) #this does not work to change background for label
            #gotta use this below
            #we also gotta use this for changing layout background
            canvas.before:
                Color:
                    rgba: (0,0,1,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
